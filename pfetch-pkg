#!/bin/sh

pkgname='pfetch'

pkgdescription='A pretty system information tool written in POSIX sh.'

pkgsource='https://github.com/dylanaraps/pfetch.git'

dependencies=""

pkginstall='make'


pkgconfig() {
	if [ "$pkginstall" = "make" ]; then
		sudo mv ~/pfetch /usr/local/src && cd /usr/local/src/pfetch && sudo make install 
	fi
}




git clone $pkgsource
	

pkgconfig	
