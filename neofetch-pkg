#!/bin/sh

pkgname='neofetch'

pkgdescription='A command-line system information tool written in bash 3.2+ '

pkgsource='https://github.com/dylanaraps/neofetch.git'

dependencies="make"

pkginstall='make'


pkgconfig() {
	if $dependencies -v make >/dev/null; then
		git clone https://github.com/dylanaraps/neofetch.git && sudo mv ~/neofetch /usr/local/src && cd /usr/local/src/neofetch && sudo make install
        fi
}


pkgconfig
